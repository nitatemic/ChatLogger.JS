# Environment variables for Steam ChatLogger
# Copy this file to .env and fill with your real values

# Steam configuration (REQUIRED)
STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password

# Steam Guard code (OPTIONAL - only if two-factor authentication is enabled)
# Replace with the 6-digit code from your Steam authenticator or received by email
# STEAM_GUARD_TOKEN=123456

# Additional configuration (OPTIONAL)
# LOG_DIRECTORY=/app/logdata/logs
# SAVE_LOGIN_DATA=true
